{
  "schemaVersion": 1,
  "id": "unloadedactivity",
  "version": "${version}",

  "custom": {
    "lithium:options": {
      "world.block_entity_ticking.sleeping.furnace": false
    }
  },

  "name": "Unloaded Activity",
  "description": "Make certain blocks such as crops grow as if they've always grown when put into simulation distance.",
  "authors": [
    "Zan"
  ],
  "contact": {
    "homepage": "https://zanspace.lol",
    "sources": "https://github.com/InZan17/Unloaded-Activity-Fabric",
    "issues": "https://github.com/InZan17/Unloaded-Activity-Fabric/issues"
  },

  "license": "GNU LGPLv3",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "lol.zanspace.unloadedactivity.fabric.UnloadedActivityFabric"
    ],
    "modmenu": [
      "lol.zanspace.unloadedactivity.fabric.UnloadedActivityModMenu"
    ]
  },
  "mixins": [
    "unloadedactivity.mixins.json",
    "unloadedactivityfabric.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "minecraft": "${compatible_versions}",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
